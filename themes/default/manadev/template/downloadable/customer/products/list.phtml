/**
 * @see Local_Manadev_Block_Customer_Products_List
 */
/**
 * @var $this Local_Manadev_Block_Customer_Products_List
 */
?>
<?php $_items = $this->getItems(); ?>
<div class="page-title">
    <h1><?php echo Mage::helper('downloadable')->__('My Licenses and Downloads') ?></h1>
</div>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php echo $this->getChildHtml('pager'); ?>
<?php if(count($_items)): ?>
    <table class="data-table" id="my-downloadable-products-table">
        <thead>
            <tr>
                <th style='width:100px;'>
                    <?php echo Mage::helper('downloadable')->__('Order #') ?> <br/><br/>
                    <?php echo Mage::helper('downloadable')->__('Date') ?>
                </th>
                <th>
                    <?php echo Mage::helper('downloadable')->__('Title') ?> <br/><br/>
                    <?php echo Mage::helper('downloadable')->__('Status') ?>
                </th>
                <th style='width:200px;'><?php echo Mage::helper('downloadable')->__('Registered Domain') ?></th>
            </tr>
        </thead>
        <tbody>
            <?php $_odd = ''; ?>
            <?php foreach ($_items as $_item): ?>
                <tr>
                    <td>
                        <a href="<?php echo $this->getOrderViewUrl($_item->getPurchased()->getOrderId()) ?>" title="<?php echo Mage::helper('downloadable')->__('View Order') ?>"><?php echo $_item->getPurchased()->getOrderIncrementId() ?></a> <br/><br/>
                        <?php echo $this->formatDate($_item->getPurchased()->getCreatedAt()) ?>
                    </td>
                    <td>
                        <?php echo $this->htmlEscape($_item->getPurchased()->getProductName()) ?> <br/><br/>
                        <em><?php echo $this->getStatusLabel($_item) ?></em> <br/>
                        <?php echo $this->getAvailableActions($_item) ?>
                    </td>
                    <td>
                        <?php echo $this->getRegisteredDomain($_item); ?>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
    <script type="text/javascript">decorateTable('my-downloadable-products-table')</script>
<?php else: ?>
    <p><?php echo Mage::helper('downloadable')->__('You have not purchased any downloadable products yet.'); ?></p>
<?php endif; ?>
<?php echo $this->getChildHtml('pager'); ?>
<div class="buttons-set">
    <p class="back-link"><a href="<?php echo $this->escapeUrl($this->getBackUrl()) ?>"><small>&laquo; </small><?php echo $this->__('Back') ?></a></p>
</div>
