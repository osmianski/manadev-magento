<div class="page-title">
    <h1><?php echo $this->__('Checkout') ?></h1>
</div>
<ol class="opc" id="checkoutSteps">
<?php $stepNo = 1; ?>
<?php $i=0; foreach($this->getSteps() as $_stepId => $_stepInfo): ?>
<?php if (!$this->getChild($_stepId) || !in_array($_stepId, array('login', 'review'))): continue; endif; $i++ ?>
    <li id="opc-<?php echo $_stepId ?>">
        <div class="step-title">
            <span class="number"><?php echo $stepNo++ ?></span>
            <h2><?php echo $_stepInfo['label'] ?></h2>
        </div>
        <div id="checkout-step-<?php echo $_stepId ?>" class="step a-item">
            <?php echo $this->getChildHtml($_stepId) ?>
        </div>
    </li>
<?php endforeach ?>
</ol>
