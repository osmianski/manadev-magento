<?php
/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount()): ?>
<tr class="crosssell-header">
    <td colspan="6">
        <h2><?php echo $this->__('Recommended for You:') ?></h2>
    </td>
</tr>
<?php foreach ($this->getItems() as $_item): ?>
    <tr class="crosssell-item">
        <td class="col-image"><a class="product-image" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>" style="height: <?php echo $_theme->getHeight(75) ?>px;"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(75, $_theme->getHeight(75)); ?>" width="75" height="<?php echo $_theme->getHeight(75) ?>" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" /></a></td>
        <td class="col-name">
            <h2 class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a></h2>
        </td>
        <td colspan="4" class="col-price">
            <?php echo $this->getPriceHtml($_item, true) ?>
            <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
        </td>
    </tr>
<?php endforeach; ?>
<?php endif; ?>
