    /* @var $_theme Mana_Theme_Helper_Data */
    $_theme = Mage::helper('mana_theme');
?>
<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Add to Cart'); ?>
<?php if($_product->isSaleable()): ?>
    <div class="add-to-cart">
        <?php if ($_theme->isVisibleInProductList($this, 'cart')): ?>
            <?php if ($_product->getFinalPrice() > 0) : ?>
                <button type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></button>
            <?php else: ?>
                <?php echo $this->getLayout()->createBlock('local_manadev/download_button')
                    ->setTemplate('local/manadev/download/button.phtml')->setProduct($_product)->toHtml() ?>
            <?php endif; ?>
        <?php endif; ?>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
<?php endif; ?>
