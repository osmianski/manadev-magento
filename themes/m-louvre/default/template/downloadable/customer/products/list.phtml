<?php
/**
 * @see Local_Manadev_Block_Customer_Products_List
 */
/**
 * @var $this Local_Manadev_Block_Customer_Products_List
 */
?>
<?php $_items = $this->getItems(); ?>
<div class="page-title">
    <h1><?php echo Mage::helper('downloadable')->__('My Licenses and Downloads') ?></h1>
</div>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php if(count($_items)): ?>
    <table class="data-table" id="my-downloadable-products-table">
        <thead>
            <tr>
                <th style='width:100px;'>
                    <?php echo Mage::helper('downloadable')->__('Order #') ?> /
                    <?php echo Mage::helper('downloadable')->__('Date') ?>
                </th>
                <th>
                    <?php echo Mage::helper('downloadable')->__('Title') ?> /
                    <?php echo Mage::helper('downloadable')->__('Status') ?>
                </th>
                <th style='width:200px;'><?php echo Mage::helper('downloadable')->__('Registered Domain') ?></th>
            </tr>
        </thead>
        <tbody>
            <?php $_odd = ''; ?>
            <?php foreach ($_items as $_item): ?>
                <tr>
                    <td class="col-order">
                        <a href="<?php echo $this->getOrderViewUrl($_item->getPurchased()->getOrderId()) ?>" title="<?php echo Mage::helper('downloadable')->__('View Order') ?>"><?php echo $_item->getPurchased()->getOrderIncrementId() ?></a>
                        <?php echo $this->formatDate($_item->getPurchased()->getCreatedAt()) ?>
                        <ul class="add-to-links order-buttons">
                            <li>
                                <a class="button btn-invoice" href="<?php echo Mage::getUrl('actions/invoice/print', array('order_id' => $_item->getPurchased()->getOrderId())) ?>" title="Invoice">Invoice</a>
                            </li>
                        </ul>
                    </td>
                    <td class="col-product">
                        <a class="product-name" href="<?php echo $this->getProductUrl($_item)?>" title="<?php echo Mage::helper('local_manadev')->__('View Product') ?>"><?php echo $this->escapeHtml($_item->getPurchased()->getProductName()) ?></a>
                        <em><?php echo $this->getStatusLabel($_item) ?></em> 
                        <?php if (($_actions = $this->getAvailableActions($_item)) && count($_actions)) : ?>
                            <ul class="add-to-links license-buttons">
                            <?php foreach ($_actions as $_action) : ?>
                                <li>
                                    <a title="<?php echo $_action['title'] ?>"
                                        <?php echo $_action['target'] ? 'target="' . $_action['target'] . '"' : '' ?>
                                        class="button <?php echo $_action['css_class'] ?>"
                                        href="<?php echo $_action['url'] ?>">
                                        <span><span><?php echo $_action['text'] ?></span></span>
                                    </a>
                                </li>
                            <?php endforeach; ?>
                            </ul>
                        <?php endif; ?>
                    </td>
                    <td class="col-registration">
                        <?php echo $this->getRegisteredDomain($_item); ?>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
    <script type="text/javascript">decorateTable('my-downloadable-products-table')</script>
<?php else: ?>
    <p><?php echo Mage::helper('downloadable')->__('You have not purchased any downloadable products yet.'); ?></p>
<?php endif; ?>
