<?php $maxTermCount=3; ?>
<?php $termCount=sizeof($this->getTerms()); ?>
<?php if( $termCount > 0 ): ?>
<div class="search-list">
    <ul class="tags-list">
	    <li class="label"><?php echo $this->__('Popular Search Terms') ?></li>
        <?php $i=0; ?>
		<?php foreach ($this->getTerms() as $_term): ?>
		    <?php $i++; ?>
            <?php if( $i > $maxTermCount )  break; ?>
            <li><a href="<?php echo $this->getSearchUrl($_term) ?>" ><?php echo $this->htmlEscape($_term->getName()); if( $i < $maxTermCount ) echo ', ' ; ?></a></li>

        <?php endforeach; ?>
    </ul>
<?php else: ?>
    <span class="top-search-terms"><?php echo $this->__('There are no search terms available.'); ?></span>
<?php endif; ?>
</div>