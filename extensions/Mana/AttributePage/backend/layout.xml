<layout version="0.1.0">
    <adminhtml_mana_attribute_page_new type="page">
        <reference name="content">
            <block type="mana_admin/page" name="page">
                <action method="setDataSource"><value>mana_attributepage/page</value></action>
                <action method="setTitle" translate="value" module="mana_attributepage">
                    <value>Create Pages for Attribute(s)</value>
                </action>
                <action method="setTitleGroup"><value>MANAdev</value></action>
                <action method="setMenu"><value>mana/attribute</value></action>

                <block type="mana_admin/grid" name="grid">
                    <action method="setDataSource"><value>mana_attributepage/page_attribute</value></action>
                    <action method="setDefaultSort"><value>attribute_id</value></action>
                    <action method="setDefaultDir"><value>asc</value></action>
                    <action method="setGridController"><value>mana_attribute_page_newGrid</value></action>

                    <!-- Columns -->
                    <block type="mana_admin/grid_column" name="grid.attribute_id">
                        <action method="setTitle" translate="value" module="mana_attributepage">
                            <value>Attribute</value>
                        </action>
                        <action method="setColumnType"><value>select</value></action>
                        <action method="setSourceModel"><value>mana_attributepage/source_attribute</value></action>
                        <action method="setSortOrder"><value>100</value></action>
                    </block>
                    <block type="mana_admin/grid_column" name="grid.position">
                        <action method="setTitle" translate="value" module="mana_attributepage">
                            <value>Position</value>
                        </action>
                        <action method="setColumnType"><value>input</value></action>
                        <action method="setWidth"><value>100px</value></action>
                        <action method="setAlign"><value>center</value></action>
                        <action method="setSortOrder"><value>200</value></action>
                    </block>

                    <!-- Actions -->
                    <block type="mana_admin/grid_action" name="grid.add">
                        <action method="setTitle" translate="value" module="mana_attributepage">
                            <value>Add</value>
                        </action>
                        <action method="setSortOrder"><value>100</value></action>
                        <action method="setClass"><value>add</value></action>
                    </block>
                    <block type="mana_admin/grid_action" name="grid.remove">
                        <action method="setTitle" translate="value" module="mana_attributepage">
                            <value>Remove Selected</value>
                        </action>
                        <action method="setSortOrder"><value>200</value></action>
                        <action method="setClass"><value>delete</value></action>
                    </block>
                    <!--<action method="onGetGridUrl"><value>page::onGetGridUrl</value></action>-->
                </block>
            </block>
        </reference>
    </adminhtml_mana_attribute_page_new>
</layout>