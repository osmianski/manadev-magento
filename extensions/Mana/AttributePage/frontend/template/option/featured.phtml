/* @var $this Mana_AttributePage_Block_Option_Featured */
$i = -1;
$_count = count($this->getAttributePage()->getOptionPages());
$_filesHelper = $this->filesHelper();
?>
<?php if($_count) :?>
    <ul class="m-option-featured-list">
        <?php foreach ($this->getAttributePage()->getOptionFeatured() as $_optionPage) : $i++;?>
            <?php if (($_imgUrl = $_optionPage->getData('featured_image')) && $_filesHelper->shouldRenderImage($_imgUrl)): ?>
            <?php $_escapedTitle = $this->escapeHtml($_optionPage->getData('title')); ?>
                <li class="category-image m-featured-image">

                        <a href="<?php echo $_optionPage->getUrl() ?>">
                        <img alt="<?php echo $_escapedTitle ?>" title="<?php echo $_escapedTitle ?>"
                            <?php echo $_filesHelper->renderImageAttributes($_imgUrl, $_optionPage->getData('featured_image_width'), $_optionPage->getData('featured_image_height')) ?>  >
                        </a>
                </li>
        <?php endif; ?>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>
