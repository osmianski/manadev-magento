$i = -1;
$_count = $this->getOptionPages();
$_filesHelper = $this->filesHelper();
?>
<?php if ($_count) : ?>
    <ul class="m-option-page-product">
        <?php foreach ($this->getOptionPages() as $_optionPage) : $i++;?>
            <?php if ($_optionPage->getData('show_product_image') && ($_imgUrl = $_optionPage->getData('product_image')) && $_filesHelper->shouldRenderImage($_imgUrl)): ?>
            <?php $_escapedTitle = $this->escapeHtml($_optionPage->getData('title')); ?>
                <li class="category-image m-option-page-image">

                        <a href="<?php echo $_optionPage->getUrl() ?>">
                        <img alt="<?php echo $_escapedTitle ?>" title="<?php echo $_escapedTitle ?>"
                            <?php echo $_filesHelper->renderImageAttributes($_imgUrl, $_optionPage->getData('product_image_width'), $_optionPage->getData('product_image_height')) ?>  >
                        </a>
                </li>
        <?php endif; ?>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>