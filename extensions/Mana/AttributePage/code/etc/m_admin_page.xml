<config>
    <pages>
        <mana_attribute_page-new translate="title title2 comment" module="mana_attributepage">
            <title>Create Pages for Attribute(s)</title>
            <title2>MANAdev</title2>
            <comment>Using this wizard you can quickly create fully customizable pages for specified attribute options (or even for option combinations if several attributes are added).</comment>
            <menu>mana/attribute</menu>
            <content>
                <general>
                    <grid>
                        <table>mana_attributepage/page_attribute</table>
                        <columns>
                            <attribute_id translate="title">
                                <title>Attribute</title>
                                <type>select</type>
                                <source_model>mana_attributepage/source_attribute</source_model>
                                <sort_order>100</sort_order>
                            </attribute_id>
                            <position translate="title">
                                <title>Position</title>
                                <type>text</type>
                                <width>150</width>
                                <sort_order>100</sort_order>
                            </position>
                        </columns>
                        <grid_actions>
                            <add />
                            <remove_selected />
                        </grid_actions>
                    </grid>
                </general>
            </content>
            <page_actions>
                <back />
                <create />
            </page_actions>
        </mana_attribute_page-new>
        <mana_attribute_option_page-index translate="title" module="mana_attributepage">
            <title>Attribute Option Pages</title>
            <sections>
                <general>
                    <grid>
                        <table>mana_attributepage/option_page</table>
                        <columns>
                            <option_id traslate="title">
                                <title>Option Label</title>
                                <type>reference</type>
                                <source_model>mana_attributepage/source_attribute_option</source_model>
                                <sort_order>100</sort_order>
                            </option_id>
                        </columns>
                        <row_action>
                            <edit />
                        </row_action>
                    </grid>
                </general>
            </sections>
            <page_actions>
                <edit_attribute_page />
            </page_actions>
        </mana_attribute_option_page-index>
        <mana_attribute_page-edit translate="title" module="mana_attributepage">
            <title>Page Settings for Attribute '%s'</title>
            <title_binding>{{field attribute.label}}</title_binding>
            <layout>
                <left_tabs />
            </layout>
            <sections>

            </sections>
        </mana_attribute_page-edit>
    </pages>
</config>