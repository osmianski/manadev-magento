<config>
    <!-- This section registers module with Magento system. -->
    <modules>
        <Mana_Slider>
            <!-- This version number identifies version of database tables specific to this extension. It is written to
		  	core_resource table.  -->
            <version>13.10.19.14</version>
        </Mana_Slider>
    </modules>
    <!-- This section contains module settings which are merged into global configuration during each page load, 
	each ajax request. -->
    <global>
        <!-- This section registers helper classes to be accessible through Mage::helper() method. Mana_Slider_Helper_Data
		class is accessible through Mage::helper('mana_slider') call, other Mana_Slider_Helper_XXX_YYY classes are accessible 
		through  Mage::helper('mana_slider/xxx_yyy') call. -->
        <helpers>
            <mana_slider>
                <!-- This says that string 'mana_slider' corresponds to Mana_Slider_Helper pseudo-namespace in 
				Mage::helper() calls. -->
                <class>Mana_Slider_Helper</class>
            </mana_slider>
        </helpers>
        <!-- INSERT HERE: blocks, models, ... -->
    </global>
    <!-- INSERT HERE: adminhtml, frontend, ... -->
</config>