<config>
    <tabs>
        <mana>
            <label>MANAdev</label>
            <sort_order>250</sort_order>
        </mana>
    </tabs>
    <sections>
        <mana>
            <groups>
                <developer translate="label" module="mana_developertools">
                    <label>Developer Tools</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <test_db translate="label comment">
                            <label>This Database is Dedicated for Automated Testing</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </test_db>
                    </fields>
                </developer>
            </groups>
        </mana>
        <mana_dev translate="label" module="mana_dev">
            <label>Development</label>
            <tab>mana</tab>
            <frontend_type>text</frontend_type>
            <sort_order>60000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <debug translate="label" module="mana_dev">
                    <label>Enable Debugging</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <jquery translate="label comment">
                            <label>Use full source jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jquery>
                        <jquery_min translate="label comment">
                            <label>Use minified jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jquery_min>
                    </fields>
                </debug>
            </groups>
        </mana_dev>
    </sections>
</config>