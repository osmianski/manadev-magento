$_element = $this->getElement();
$_note = $_element->getNote();
$_trId = $_element->getHtmlContainerId();
$_class = $_element->getFieldsetHtmlClass();
$info = $this->jsHelper()->parseClientSideBlockInfo($this);
$this->checkFieldDisable();
?>
<?php if (!$_element->getNoDisplay()): ?>

    <tr<?php if ($_trId): ?> id="<?php echo $_trId ?>"<?php endif; ?> <?php echo $info['attribute_html'] ?>>
        <td class="<?php echo $_element->hasValueClass() ? $_element->getValueClass() : 'value' ?><?php echo $_class ? " {$_class}-value" : '' ?>">
            <?php echo trim($_element->getElementHtml()) ?>
            <?php if ($_note): ?>
                <p class="note<?php echo $_class ? " {$_class}-note" : '' ?>" id="note_<?php echo $_element->getId() ?>"><span><?php echo $_note ?></span></p>
            <?php endif ?>
        </td>
        <?php if ($this->getDisplayUseDefault()) : ?>
        <td class="use-default">
            <ul>
                    <li>
                        <input <?php if ($_element->getReadonly() || !$this->getUseDefaultEnabled()) : ?> disabled="disabled"<?php endif; ?> type="checkbox" name="use_default[]"
                                                                                                                                             id="<?php echo $_element->getHtmlId(
                                                                                                                                             ) ?>_default"<?php if ($this->getUsedDefault()
                        ): ?> checked="checked"<?php endif; ?> class="m-default" value="<?php echo $_element->getData('name') ?>"/>
                        <label for="<?php echo $_element->getHtmlId() ?>_default" class="normal"><?php echo $this->getDefaultLabel() ?></label>
                    </li>
                <?php echo trim($_element->getUseDefaultHtml()) ?>
            </ul>
        </td>
        <?php endif; ?>
    </tr>
<?php endif; ?>
