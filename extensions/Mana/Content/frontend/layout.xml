<layout version="0.1.0">
    <mana_content_book_view>
        <update handle="mana_menu"/>
        <update handle="mana_ajax" />

        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>

        <reference name="head">
            <action method="addJs"><script>jquery/history.adapter.jquery.js</script></action>
            <action method="addJs"><script>jquery/history.js</script></action>
            <action method="addCss"><stylesheet>css/markdownpad-github.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/mana/content.js</name><params/></action>
        </reference>

        <reference name="m_ajax_update">
		    <action method="setRenderedButNotSentBlocks"><blocks>m_ajax_update,head</blocks></action>
            <action method="setUpdatedBlocksIfPageChanged"><updated_blocks>content,tree,breadcrumbs</updated_blocks></action>
            <action method="setUpdatedBlocksIfParameterChanged"><updated_blocks>tree</updated_blocks></action>
            <action method="setInterceptedLinkContainers"><css_selector>.mb-search</css_selector></action>
		</reference>

        <reference name="left">
            <block type="mana_content/tree" name="tree" as="tree">
                <action method="setMClientSideBlock"><params><type>Mana/Content/Tree</type></params></action>
            </block>
            <block type="mana_content/search" name="search" as="search">
                <action method="setMClientSideBlock"><params><type>Mana/Content/Tree/Search</type></params></action>
            </block>
        </reference>
        <reference name="content">
            <action method="setMClientSideBlock"><params><type>Mana/Core/Block</type></params></action>
            <block type="mana_content/book" name="book" as="book"/>
        </reference>
        <reference name="breadcrumbs">
            <action method="setMClientSideBlock"><params><type>Mana/Core/Block</type></params></action>
        </reference>

        <remove name="left.permanent.callout" />
        <remove name="left.newsletter"/>
        <remove name="tags_popular"/>
    </mana_content_book_view>
</layout>