<layout version="0.1.0">
    <catalog_category_layered>
        <update handle="jquery_core" />
		<reference name="head">
			<action method="addCss"><stylesheet>css/manapro_filtercontent.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/manapro_filtercontent.js</name><params/></action>
		</reference>
        <reference name="category.products">
            <action method="setData">
                <key>m_filter_content_title</key>
                <renderer>manapro_filtercontent/block_category_title</renderer>
            </action>
            <action method="setData">
                <key>m_filter_content_subtitle</key>
                <renderer>manapro_filtercontent/block_category_subtitle</renderer>
            </action>
            <action method="setData">
                <key>m_filter_content_description</key>
                <renderer>manapro_filtercontent/block_category_description</renderer>
            </action>
            <action method="setData">
                <key>m_filter_content_additional_description</key>
                <renderer>manapro_filtercontent/block_category_additionalDescription</renderer>
            </action>
        </reference>
    </catalog_category_layered>
    <catalogsearch_result_index>
        <update handle="jquery_core" />
		<reference name="head">
			<action method="addCss"><stylesheet>css/manapro_filtercontent.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/manapro_filtercontent.js</name><params/></action>
		</reference>
        <reference name="search.result">
            <action method="setData">
                <key>m_filter_content_title</key>
                <renderer>manapro_filtercontent/block_search_title</renderer>
            </action>
            <action method="setData">
                <key>m_filter_content_subtitle</key>
                <renderer>manapro_filtercontent/block_search_subtitle</renderer>
            </action>
        </reference>
        <reference name="search_result_list">
            <action method="setData">
                <key>m_filter_content_additional_description</key>
                <renderer>manapro_filtercontent/block_search_additionalDescription</renderer>
            </action>
            <action method="setData">
                <key>m_filter_content_description</key>
                <renderer>manapro_filtercontent/block_search_description</renderer>
            </action>
        </reference>
    </catalogsearch_result_index>
    <cms_page_layered>
        <update handle="jquery_core" />
		<reference name="head">
			<action method="addCss"><stylesheet>css/manapro_filtercontent.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/manapro_filtercontent.js</name><params/></action>
		</reference>
        <reference name="page_content_heading">
            <action method="setData">
                <key>m_filter_content_title</key>
                <renderer>manapro_filtercontent/block_cms_title</renderer>
            </action>
            <action method="setData">
                <key>m_filter_content_subtitle</key>
                <renderer>manapro_filtercontent/block_cms_subtitle</renderer>
            </action>
        </reference>
        <reference name="cms_page">
            <action method="setData">
                <key>m_filter_content_description</key>
                <renderer>manapro_filtercontent/block_cms_description</renderer>
            </action>
            <action method="setData">
                <key>m_filter_content_additional_description</key>
                <renderer>manapro_filtercontent/block_cms_additionalDescription</renderer>
            </action>
        </reference>
    </cms_page_layered>
    <mana_optionpage_view>
        <update handle="jquery_core" />
		<reference name="head">
			<action method="addCss"><stylesheet>css/manapro_filtercontent.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/manapro_filtercontent.js</name><params/></action>
		</reference>
        <reference name="option_view">
            <action method="setData">
                <key>m_filter_content_title</key>
                <renderer>manapro_filtercontent/block_optionPage_title</renderer>
            </action>
            <action method="setData">
                <key>m_filter_content_subtitle</key>
                <renderer>manapro_filtercontent/block_optionPage_subtitle</renderer>
            </action>
            <action method="setData">
                <key>m_filter_content_description</key>
                <renderer>manapro_filtercontent/block_optionPage_description</renderer>
            </action>
            <action method="setData">
                <key>m_filter_content_additional_description</key>
                <renderer>manapro_filtercontent/block_optionPage_additionalDescription</renderer>
            </action>
        </reference>
    </mana_optionpage_view>
</layout>