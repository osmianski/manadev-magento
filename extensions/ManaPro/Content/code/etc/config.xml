<config>
    <modules>
        <ManaPro_Content>
            <version>14.10.14.14</version>
        </ManaPro_Content>
    </modules>
    <global>
        <blocks>
            <manapro_content>
                <class>ManaPro_Content_Block</class>
            </manapro_content>
        </blocks>
        <helpers>
            <manapro_content>
                <class>ManaPro_Content_Helper</class>
            </manapro_content>
        </helpers>
        <models>
            <manapro_content>
                <class>ManaPro_Content_Model</class>
                <resourceModel>mana_content_resources</resourceModel>
            </manapro_content>
            <mana_content_resources>
                <class>ManaPro_Content_Resource</class>
            </mana_content_resources>
        </models>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <ManaPro_Content>
                    <files>
                        <default>ManaPro_Content.csv</default>
                    </files>
                </ManaPro_Content>
            </modules>
        </translate>
        <layout>
            <updates>
                <manapro_content>
                    <file>manapro_content.xml</file>
                </manapro_content>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <manapro_content>
                    <file>manapro_content.xml</file>
                </manapro_content>
            </updates>
        </layout>
    </frontend>
</config>