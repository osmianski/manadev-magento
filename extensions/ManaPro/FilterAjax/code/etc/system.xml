<config>
    <sections>
        <mana>
            <groups>
                <ajax>
                    <fields>
                        <scroll_to_top_filter translate="label" module="manapro_filterajax">
                            <label>Scroll to Top After Pager Clicks</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </scroll_to_top_filter>
                        <disable_for_category_redirects translate="label" module="manapro_filterajax">
                            <label>Disable AJAX for Category Redirects</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>250</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </disable_for_category_redirects>
                        <url_key_filter translate="label" module="manapro_filterajax">
                            <label>URL Key Used Internally In Layered Navigation AJAX Refresh</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </url_key_filter>
                        <google_analytics_account translate="label comment" module="manapro_filterajax">
                            <label>Google Analytics Account ID</label>
                            <comment>Used to track layered navigation AJAX refresh requests. Leave empty if standard setting in Google API section is filled in.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>350</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_analytics_account>
                    </fields>
                </ajax>
            </groups>
        </mana>
    </sections>
</config>