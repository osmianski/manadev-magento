<config>
    <!-- This section registers module with Magento system. -->
    <modules>
        <ManaTheme_Uffizi>
            <!-- This version number identifies version of database tables specific to this extension. It is written to
		  	core_resource table.  -->
            <version>12.12.18.22</version>
        </ManaTheme_Uffizi>
    </modules>
    <!-- This section contains module settings which are merged into global configuration during each page load, 
	each ajax request. -->
    <global>
        <!-- This section registers helper classes to be accessible through Mage::helper() method. ManaThemes_Jewels_Helper_Data
		class is accessible through Mage::helper('manatheme_uffizi') call, other ManaThemes_Jewels_Helper_XXX_YYY classes are accessible
		through  Mage::helper('manatheme_uffizi/xxx_yyy') call. -->
        <helpers>
            <manatheme_uffizi>
                <!-- This says that string 'manatheme_uffizi' corresponds to ManaThemes_Jewels_Helper pseudo-namespace in 
				Mage::helper() calls. -->
                <class>ManaTheme_Uffizi_Helper</class>
            </manatheme_uffizi>
        </helpers>
        <!-- This section registers block classes ManaTheme_Uffizi_Block_XXX_YYY to be accessible through
            'manatheme_uffizi/xxx_yyy' shortcuts. -->
        <blocks>
            <!-- This says that string 'manatheme_uffizi' corresponds to ManaTheme_Uffizi_Block pseudo-namespace. -->
            <manatheme_uffizi>
                <class>ManaTheme_Uffizi_Block</class>
            </manatheme_uffizi>
            <!-- INSERT HERE: rewrites, ... -->
        </blocks>
        <!-- This section registers model classes to be accessible through Mage::getModel('<model type>') and through
            Mage::getSingleton('<model type>') calls. That is, ManaTheme_Uffizi_Model_XXX_YYY classes are accessible as
            'manatheme_uffizi/xxx_yyy' type strings both in getModel() and getSingleton() calls. -->
        <models>
            <!-- This says that string 'manatheme_uffizi' corresponds to ManaTheme_Uffizi_Model pseudo-namespace in
                getModel() and getSingleton() calls. -->
            <manatheme_uffizi>
                <class>ManaTheme_Uffizi_Model</class>
                <!-- INSERT HERE: resource section name -->
            </manatheme_uffizi>
            <!-- INSERT HERE: rewrites, ... -->
        </models>
        <!-- INSERT HERE: blocks, models, ... -->
    </global>
    <!-- This section enables static visual changes in frontend area. -->
    <frontend>
        <!-- This section registers additional layout XML file with our module-specific layout changes to be loaded
   and executes during page rendering. -->
        <layout>
            <updates>
                <manatheme_uffizi>
                    <file>manatheme_uffizi.xml</file>
                </manatheme_uffizi>
            </updates>
        </layout>
        <!-- INSERT HERE: layout, translate, routers -->
    </frontend>
